@model KOP.Common.Dtos.AccountDtos.LoginDto

@{
	Layout = null;
}

<head>
	<title>Авторизация</title>
	<link rel="stylesheet" href="/css/main_style.css">
</head>
<body>
	<!-- Popup -->
	<div id="projectPopup" style="display:none;">

		<div class="title">Маршрутизация КОП</div>
		<div class="mid_description margin_container_bottom_middle">Так как у вас есть учетная запись в двух блоках КОП, выберите в какой блок вы хотите зайти</div>

		<div class="user-types" id="registerform-usertype">
			<div class="user-type-card" id="hellSection">
				<div class="user-type-card-icon">
					<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#1b74fd"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M5 21C5 17.134 8.13401 14 12 14C15.866 14 19 17.134 19 21M16 7C16 9.20914 14.2091 11 12 11C9.79086 11 8 9.20914 8 7C8 4.79086 9.79086 3 12 3C14.2091 3 16 4.79086 16 7Z" stroke="#1b74fd" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
				</div>
				<div class="user-type-card-content">
					<div class="user-type-card-title">
						Блок немассовых позиций
					</div>
					<div class="user-type-card-description">
						В данном блоке находятся немассовые позиции Розничной и Корпоративной сети
					</div>
				</div>
				
			</div>

			<div class="user-type-card" id="heavenSection">
				<div class="user-type-card-icon">
					<svg viewBox="0 0 24 24" id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#1b74fd" stroke="#1b74fd">
						<g id="SVGRepo_bgCarrier" stroke-width="0"></g>
						<g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
						<g id="SVGRepo_iconCarrier">
							<defs>
								<style>
									.cls-1 {
										fill: none;
									}

									.cls-2 {
										clip-path: url(#clip-path);
									}</style> <clipPath id="clip-path"> <rect class="cls-1" width="24" height="24"></rect> </clipPath>
							</defs> <title>user-tie</title> <g class="cls-2"> <path d="M12,14a6,6,0,1,1,6-6A6,6,0,0,1,12,14ZM12,4a4,4,0,1,0,4,4A4,4,0,0,0,12,4Z"></path> <path d="M21,22a1,1,0,0,1-1-1,7,7,0,0,0-7-7H11a7,7,0,0,0-7,7,1,1,0,0,1-2,0,9,9,0,0,1,9-9h2a9,9,0,0,1,9,9A1,1,0,0,1,21,22Z"></path> <path d="M12,22a1,1,0,0,1-.71-.29l-1-1a1,1,0,0,1-.28-.85l1-7a1,1,0,0,1,2,0l1,7a1,1,0,0,1-.28.85l-1,1A1,1,0,0,1,12,22Z"></path> </g>
						</g>
					</svg>
				</div>
				<div class="user-type-card-content">
					<div class="user-type-card-title">
						Блок руководящих позиций
					</div>
					<div class="user-type-card-description">
						В данном блоке находятся начальники ССП
					</div>
				</div>
				
			</div>

			
		</div>
	</div>

	<!-- Фон для затемнения -->
	<div id="overlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(0,0,0,0.5); z-index:999;"></div>

	<section class="login_container">
		<div class="login_main_wrapper">
			<div class="form signup">
				<header class="header_login_form">Вход</header>
				<form id="loginForm" class="login_form">
					<!--дизайн текста об ошибке при авторизации-->
					<div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger text-center" id="validationText"></div>
					<div style="font-size:23px; font-family:Impact" class="text-center" id="description"></div>
					<input id="login" type="text" class="form-control" placeholder="Логин" minlength="3" maxlength="20" required />
					<input id="password" type="password" class="form-control" placeholder="Пароль" minlength="3" maxlength="20" required />
					<a href="#" class="forgot_pass" id="forgot_pass">Забыли пароль?</a>
					<input type="submit" value="Войти" />
				</form>
			</div>
			<div class="form login">
				<header class="header_login_form">KOП</header>
				<form id="remindPasswordForm" class="login_form">
					<div class="description">
						Пароль будет выслан Вам на рабочую почту
					</div>
					<input id="loginRemindPassword" type="text" class="form-control" placeholder="Логин" minlength="3" maxlength="20" required />
					<input type="submit" value="Напомнить пароль" />
				</form>
			</div>
		</div>
	</section>
</body>

<script src="~/js/loginScript.js">

</script>